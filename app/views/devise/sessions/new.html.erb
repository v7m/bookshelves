<center><h2>Log in</h2></center>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal", multipart: true }) do |f| %>

    <div class="form-group">
        <%= f.label :login, class: "col-sm-4 control-label" %>
        <div class="col-sm-4"><%= f.text_field :login, autofocus: true, class: "form-control" %></div>
    </div>

    <div class="form-group">
        <%= f.label :password, class: "col-sm-4 control-label" %>
        <div class="col-sm-4"><%= f.password_field :password, autocomplete: "off", class: "form-control" %></div>
    </div>

    <% if devise_mapping.rememberable? -%>

    <div class="form-group">
        <div class="col-sm-offset-4 col-sm-4">
            <div class="checkbox">
                <%= f.label :remember_me, class: "checkbox" do %>    
                    <%= f.check_box :remember_me %>Remember me
                <% end %>            
            </div>
        </div>
    </div>
    <% end -%>

    <div class="form-group">
        <div class="col-sm-offset-4 col-sm-4">
            <%= f.submit "Log in", class: "btn btn-primary" %>         
        </div>
    </div>
<% end %>
<div class="form-group">
    <div class="col-sm-offset-4 col-sm-4">
        <%= render "devise/shared/links" %>         
    </div>
</div>
