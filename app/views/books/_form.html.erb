<%= form_for([@shelf, @book], html: {class: "form-horizontal"}) do |f| %>
    <div class="form-group">
        <%= f.label :title, class: "col-sm-2 control-label" %>
        <div class="col-sm-7"><%= f.text_field :title, class: "form-control" %></div>
    </div>  
    <div class="form-group">
        <%= f.label :author, class: "col-sm-2 control-label" %>
        <div class="col-sm-7"><%= f.text_field :author, class: "form-control" %></div>
    </div>   
    
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="checkbox">
        <%= f.label :readed, class: "checkbox" do %>
          <%= f.check_box :readed %> Readed
        <% end %>
      </div>
    </div>
  </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-7">
            <%= f.submit "Add Book", class: "btn btn-primary" %>
    </div> 

<% end %>   