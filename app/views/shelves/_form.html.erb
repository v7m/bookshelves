<%= form_for(@shelf, html: {class: "form-horizontal"}) do |f| %>
	<div class="form-group">
		<%= f.label :name, class: "col-sm-2 control-label" %>
			<div class="col-sm-7"><%= f.text_field :name, class: "form-control" %></div>
    </div>  

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-7">
            <%= f.submit "Create Shelf", class: "btn btn-primary" %>
    </div>
<% end %>